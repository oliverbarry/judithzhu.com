<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../styles.css" type="text/css" />
    <title>Blog</title>
  </head>
  <body class="blog-list">
    <header class="header">
      <a class="logo" href="/">home</a>
      <nav>
        <a class= "logo" href="https://github.com/oliverlaso" target="_blank" rel="noopener noreferrer">github</a>
      </nav>
    </header>
    <div class="container">
      <h1 class="title">blog</h1>
      <ul class="posts">
        {% for post in collections.sortedPosts | reverse %}
        <li class="post">
          <a href="{{ post.url }}">
            <date>{{ post.date | date: "yyyy-MM-dd" }}</date>
            <span>{{ post.data.title }}</span>
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </body>
</html>
